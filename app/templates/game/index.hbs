<div class="row">
	<div class="col s6 l2 offset-l1 center-align">
		<a {{action this.createGame}} class="waves-effect waves-light btn blue btn-create"><i class="material-icons left">add</i>Crear Juego</a>
	</div>
	<div class="col s6 l3">
		{{#power-select
		  selected=user
		  options=options
		  onchange=(action "selectUser")
		  as |name|
		}}
		  {{name.username}}
		{{/power-select}}
	</div>
	<div class="col s12 l8 offset-l2 table-game">
		<table class="striped centered">
		    <thead>
		      <tr>
		          <th>CÃ³digo</th>
		          <th>Status</th>
		          <th>Jugadores</th>
		          <th>Agregar</th>
		          <th>Jugar</th>
		      </tr>
		    </thead>

		    <tbody>
		      {{#each this.model.games as |game|}}
		      	<tr>
			        <td>{{game.code}}</td>
			        <td>{{game.status}}</td>
			        <td>{{game.total_users}}</td>
			        <td>
			        	{{#if (lt game.total_users 2)}}
			        		<a class="waves-effect waves-light btn blue"><i class="material-icons left">videogame_asset</i>Join</a>
			        	{{/if}}
			        </td>
			        <td>
			        	{{log game.id}}
			        	<LinkTo @route="game.crear" @model={{game.id}}><a class="waves-effect waves-light btn green"><i class="material-icons left">play_arrow</i>Play</a></LinkTo>
			        	
			        </td>
			      </tr>
		      {{/each}}
		    </tbody>
		</table>
	</div>
</div>