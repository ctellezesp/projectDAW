<div class="row">
	<div class="col s12 crear-header">
		<div class="row">
			<div class="col s4">
				<h5 class="center-align">CÃ³digo: {{this.model.game.code}}</h5>
			</div>
			<div class="col s4">
				<h5 class="center-align">Status: {{this.model.game.myStatus}}</h5>
			</div>
			<div class="col s4">
				<h5 class="center-align">Jugadores: {{this.model.game.total_users}}</h5>
			</div>
			<div class="col s4">
				<a id="create" class="btn {{if (lt this.model.game.total_users 2) "disabled"}}" onclick={{action "startGame" this.model.game.id}}>Comenzar Juego</a>
			</div>
			<div class="col s4 center-align">
				{{#if this.model.game.winner_name}}
					<h5>Ganador: {{this.model.game.winner_name}}</h5>
				{{/if}}
			</div>
			<div class="col s4 right-align">
				<LinkTo @route="game.index"><a class="waves-effect waves-light btn">Salir</a></LinkTo>
			</div>
		</div>
	</div>
	<div class="col s12">
		{{#each this.model.player as |player|}}
			<div class="col s6 center-align">
				<h5>{{player.human.username}}</h5>
				<img class="circle player" src="http://pluspng.com/img-png/user-png-icon-male-user-icon-512.png">
				<div class="row">
					<div class="col s9">
						
							{{#power-select disabled=(if (not-eq this.model.game.status 2) true) selected=selected options=options onchange=(action "chooseGame") as |option|}}
							  {{option}}
							{{/power-select}}
					</div>
					<div class="col s3">
						<a class="btn-floating btn-large waves-effect waves-light red" onclick={{action "play"}}><i class="material-icons">play_arrow</i></a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>